campaign_A = {"john@ust.com", "priya@ust.com", "amit@ust.com", "rahul@ust.com"}
campaign_B = {"neha@ust.com", "amit@ust.com", "priya@ust.com", "meena@ust.com"}
print("Customer for both campaign",campaign_A.union(campaign_B))
print("Customers only in campaign A",campaign_A.difference(campaign_B))
print("Customers only for one campaign",campaign_A.symmetric_difference(campaign_B))
print("Total unique customers",len(campaign_A.union(campaign_B)))

# Customer for both campaign {'meena@ust.com', 'john@ust.com', 'rahul@ust.com', 'priya@ust.com', 'amit@ust.com', 'neha@ust.com'}
# Customers only in campaign A {'john@ust.com', 'rahul@ust.com'}
# Customers only for one campaign {'john@ust.com', 'rahul@ust.com', 'neha@ust.com', 'meena@ust.com'}
# Total unique customers 6